extends ./layout.pug

block options
    form#charRaceForm.optionsForm.visible(action='submitCharRace', method='post', enctype='application/x-www-form-urlencoded')
        #charRaceHeader.optionsHeader
            h1 Character Race
        #charRaceHuman.charRace
            img(src='img/placeholder.png')
            h1 Human
        #charRaceElf.charRace
            img(src='img/placeholder.png')
            h1 Elf
        #charRaceDwarf.charRace
            img(src='img/placeholder.png')
            h1 Dwarf
        #charRaceHalfling.charRace
            img(src='img/placeholder.png')
            h1 Halfling
        input#charRaceBack.optionsBack(name='back ', value='Back ', type='button')
        input#charRaceSubmit.optionsNext(name='next ', value='Next ', type='button')