mixin chooseRace
    include description-mixin

    #chooseRaceTab.tab
        #charRaceHeader.optionsHeader
            h1 Character Race
        #charRaceHuman.charRace.blue
            img(src='img/placeholder.png')
            h1.blue Human
        #charRaceElf.charRace.green
            img(src='img/placeholder.png')
            h1.green Elf
        #charRaceDwarf.charRace.red
            img(src='img/placeholder.png')
            h1.red Dwarf
        #charRaceHalfling.charRace.purple
            img(src='img/placeholder.png')
            h1.purple Halfling
        +description

    script(src='/js/chooseRace.js', type="text/javascript")