doctype html
html
  head
    meta(charset='utf-8')
    title D&D 3.5e Character Creator
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css', media='screen', href='/css/styles.css')
    script(src='/js/index.js', type='text/javascript')
    script(src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js')
    style.
      @import url('https://fonts.googleapis.com/css?family=Calligraffitti|Cinzel|Merienda|Permanent+Marker');
    link(href='https://fonts.googleapis.com/css?family=Calligraffitti|Nothing+You+Could+Do|Permanent+Marker|Shadows+Into+Light', rel='stylesheet')
    include header-mixin
    include chooseClass-mixin
    include chooseRace-mixin
    include description-mixin
  body
    +header

    form#optionsForm(action='', method='post', enctype='application/x-www-form-urlencoded')
      +chooseClass
      +chooseRace
      +description
      button#btnBack(type='button') Back
      button#btnNxt(type='button') Next


    
